  </ItemGroup>
  <ItemGroup>
    <Compile Update="Controls\MediaTrackControl.axaml.cs">
      <DependentUpon>MediaTrackControl.axaml</DependentUpon>
    </Compile>
  </ItemGroup>
</Project>
